<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ProductChangeActivity">

        </activity>
        <activity
            android:name=".activities.PurchaseHistoryActivity"
            android:label="@string/menu_purchase_history">
            <intent-filter>
                <action android:name="android.intent.action.PURCHASE_HISTORY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StatisticsForTheMonthActivity"
            android:label="@string/menu_statistics_for_the_month">
            <intent-filter>
                <action android:name="android.intent.action.STATISTICS_FOR_THE_MOUTH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StatisticsForTheYearActivity"
            android:label="@string/menu_statistics_for_the_year">
            <intent-filter>
                <action android:name="android.intent.action.STATISTICS_FOR_THE_YEAR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@menu/menu_main" />

        <provider
            android:name=".data.MoneyTrackerContentProvider"
            android:authorities="com.example.moneytracker"
            android:exported="false" />
    </application>

</manifest>